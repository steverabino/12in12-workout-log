= simple_form_for(@workout, html: { class: 'form-horizontal' } ) do |f|
  = f.input :date, label: "Date", input_html: { class: 'form_control' }
  = f.input :description, label: "Description", input_html: { class: 'form_control' }
  = f.input :mood, label: "How were you feeling?", input_html: { class: 'form_control' }
  = f.input :length, label: "Length", input_html: { class: 'form_control' }
  %br/
  = f.button :submit
